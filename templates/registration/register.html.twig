{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% set isSecurityPage = true %}

{% block body %}
    {% for message in app.flashes('compteFail') %}
        <div class="alert alert-danger justify-content-center " role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container mt-5">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4">Créer un Compte</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'mb-4','novalidate': 'novalidate'}}) }}
            <div class="d-flex flex-row">
                <div class="d-flex p-2">
                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'label': 'Nom :'}}) }}
                </div>
                <div class="d-flex p-2">
                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control', 'label': 'Prénom :'}}) }}
                </div>
            </div>
{#            <div class="mb-3">#}
{#                {{ form_row(registrationForm.dateNaiss, {'attr': {'class': 'form-control', 'label': 'Date de Naissance :'}}) }}#}
{#            </div>#}

            <div class="mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'label': 'Email :'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.password, {
                    'label': 'Mot de passe :',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.passwordConfirmation, {
                    'label': 'Confirmation du mot de passe :',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="form-check mb-3">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, "Accepte les Conditions d'utilisation", {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            <p class="descri">En acceptant ces <a class="btn-link" href="{{ url('app_CU') }}">Conditions
                    d'Utilisation</a>, vous reconnaissez avoir lu, compris et accepté l'ensemble des dispositions
                énoncées.</p>

            <p>Déjà un Compte ? <a class="btn-link" href="{{ url('app_login') }}">Connectez-vous</a></p>

            <button type="submit" class="btn btn-primary">Créer le compte</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
