<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>WeWorkTogether - {% block title %}{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ url('app_home') }}">
            <img src="img/logo.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            WeWorkTogether
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ url('app_home') }}">Acceuil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('app_unite') }}">Unités</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('app_abonnement') }}">Abonnement</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                       aria-expanded="false">
                        Espace Client
                    </a>
                    <ul class="dropdown-menu">
{#                        <li><a class="dropdown-item" href="{{ url('app_userpage') }}">Votre Profil</a></li>#}
                        <li><a class="dropdown-item" href="{{ url('app_facturation') }}">Facturation</a></li>
                        <li><a class="dropdown-item" href="{{ url('app_vos_unite') }}">Vos Unités</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        {% block estconnecte %}{% endblock %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
