{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% set isSecurityPage = true %}

{% block body %}
    <form method="post" class="form-signin">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se
                    déconnecter</a>
            </div>
        {% endif %}

        <div class="container mt-5">
            <div class="col-md-6 offset-md-3">
                <h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1>

                <label for="username" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                       autocomplete="email" required autofocus>

                <label for="password" class="sr-only">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control"
                       autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                <p>Vous n'avez pas encore de Compte ? <a class="btn-link" href="{{ url('app_register') }}">Créer un
                        Compte</a></p>

                {#            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                {#            See https://symfony.com/doc/current/security/remember_me.html #}

                {#            <div class="checkbox mb-3"> #}
                {#                <label> #}
                {#                    <input type="checkbox" name="_remember_me"> Remember me #}
                {#                </label> #}
                {#            </div> #}


                <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
            </div>
        </div>
    </form>
{% endblock %}
